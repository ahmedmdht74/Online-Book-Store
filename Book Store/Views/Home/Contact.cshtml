@model Contact
@{
    ViewData["Title"] = "Contact";
}



<div class="mx-5 row mb-1 m-0" >

    @* background-color:#F2E5CE; *@
    <div class="col-md-12 row m-0 bg-light p-3" style="">

        <div class="col-12">
            <p class="p-1 m-2" style="font-size:40px;">Contact Us</p>
        </div>

        <div class="col-12 p-3">
            <form method="post" asp-action="Contact" asp-controller="Home" class="px-5 border-bottom py-2">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input class="form-control" style="height:7vh;border-radius:10px" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <input class="form-control" style="height:7vh;border-radius:10px" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Subject" class="form-label"></label>
                    <input class="form-control" style="height:7vh;border-radius:10px" asp-for="@Model.Subject">
                    <span asp-validation-for="@Model.Subject" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Message" class="form-label"></label>
                    <textarea class="form-control" style="height:7vh;border-radius:10px" cols="5" asp-for="@Model.Message"></textarea>
                    <span asp-validation-for="@Model.Message" class="text-danger"></span>
                </div>
                <div class="mt-4 ">
                    <button type="submit" class="btn btncol w-100 text-white" style="border-radius:10px;font-weight:bold;height:7vh">Send Message</button>
                </div>
            </form>
        </div>


        <div class="col-md-6 col-sm-12 p-2 align-self-center text-center" >
            <img src="/images/contact.jpg"  alt="contact1" class="img-fluid w-75"/>
            <br />
            <a href="#" class="text-start h1 m-1  text-black" style="text-decoration-line:none">
                <i class="fa-brands fa-facebook"></i>
            </a>
            <a href="#" class="text-start h1 m-1  text-black" style="text-decoration-line:none">
                <i class="fa-brands fa-square-x-twitter"></i>
            </a>
            <a href="#" class="text-start h1 m-1  text-black" style="text-decoration-line:none">
                <i class="fa-brands fa-square-instagram"></i>
            </a>
        </div>

        <div class="col-12 p-5">
            <p style="font-size:30px;">
                Our customer service team is here to assist you with any inquiries. Feel free to reach out to us via email or connect with us on our social media platforms. We're always happy to help and look forward to hearing from you!
            </p>
            <p style="font-size:30px;">
                Phone: +1 (234) 567-8901 Email: support@bookhaven.com Address: 123 Book Lane, Library City, BK 10101
            </p>
        </div>


    </div>

</div>




@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}