@model RegisterVM

@{
    ViewData["Title"] = "Sign up";
    Layout = "/Views/Shared/_LoginandRegisterLayout.cshtml";
}





<form method="post" class=" p-4" asp-action="Register" asp-controller="Account">
    @{
        if (TempData["res"] != null){
            if ((bool)TempData["res"] == true)
            {
                <div asp-validation-summary="All" class="text-danger">
                </div>
            }
        }
    }

    <div class="row">
        <div class="mt-3 col-6">
            <input asp-for="@Model.Firstname" placeholder="Firstname" class="form-control" style="height:7vh;border-radius:10px">
            <span asp-validation-for="@Model.Firstname" class="form-text text-danger"></span>
        </div>
        <div class="mt-3 col-6">
            <input asp-for="@Model.Lastname" placeholder="Lastname" class="form-control" style="height:7vh;border-radius:10px">
            <span asp-validation-for="@Model.Lastname" class="form-text text-danger"></span>
        </div>
    </div>
    <div class="mt-3">
        <input asp-for="@Model.Email" placeholder="Email" class="form-control" style="height:7vh;border-radius:10px">
        <span asp-validation-for="@Model.Email" class="form-text text-danger"></span>
    </div>
    <div class="mt-3 ">
        <input asp-for="@Model.Password" type="password" placeholder="Password" class="form-control" style="height:7vh;border-radius:10px">
        <span asp-validation-for="@Model.Password" class="form-text text-danger"></span>
    </div>
    <div class="mt-3 ">
        <input asp-for="@Model.ConfirmPassword" type="password" placeholder="Confirm Password" class="form-control" style="height:7vh;border-radius:10px">
        <span asp-validation-for="@Model.ConfirmPassword" class="form-text text-danger"></span>
    </div>
    <div class="mt-3 ">
        <button type="submit" class="btn btncol w-100 text-white" style="border-radius:10px;font-weight:bold;height:7vh">Register</button>
    </div>
</form>
